{
	"name": "open-vanilla",
	"description": "An open movement to create pure and plain JavaScript libraries with zero dependency.",
	"version": "0.0.0",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"source": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs",
			"default": "./dist/index.mjs"
		}
	},
	"license": "MIT",
	"author": "Ayoub Adib <adbayb@gmail.com> (https://twitter.com/adbayb)",
	"bugs": "https://github.com/adbayb/open-vanilla/issues",
	"homepage": "https://github.com/adbayb/open-vanilla/tree/main/open-vanilla#readme",
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/open-vanilla.git",
		"directory": "libraries/open-vanilla"
	},
	"scripts": {
		"prepublishOnly": "pnpm build",
		"clean": "rm -rf dist",
		"start": "pnpm watch",
		"build": "pnpm clean && quickbundle build",
		"watch": "quickbundle watch",
		"test": "vitest"
	},
	"devDependencies": {
		"quickbundle": "2.8.0",
		"vitest": "2.1.8"
	}
}
